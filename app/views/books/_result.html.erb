<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>title</th>
            <th>opinion</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="book">
    <% books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" , size:'40x40' %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
        <% if book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, remote: true %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
</table>