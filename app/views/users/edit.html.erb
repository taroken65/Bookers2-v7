<div class="container pt-3 d-flex align-items-center justify-content-center">
  <div class="row">
      <div class="col-12">

<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name, autofocus: true, class: "w-100" %>
  <br>
  <%= f.label :image %>
  <br>
  <%= f.attachment_field :profile_image %>
  <br>
  <%= f.label :introduction %>
  <br>
  <%= f.text_area :introduction, class: "w-100" %>
  <br>

  <%= f.submit "Update User", class: 'btn btn-secondary mt-3' %>
<% end %>

</div>
</div>
